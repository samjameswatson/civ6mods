			<Grid ID="RankingsWindow" Size="auto,auto" Anchor="C,C" Offset="0,0" Style="DropShadow2" Color="255,255,255,200" AutoSizePadding="25,25" ConsumeMouse="1">
				<!-- Colored Menu Backing -->
				<Box Color="11,27,40,255" Size="500,auto" Anchor="C,C" AutoSizePadding="10,-5">
					<!-- Frame -->
					<Grid Size="parent+10,auto" Anchor="C,C" Style="WindowFrameAlpha" AutoSizePadding="0,25">
						<Stack Offset="0,20" Anchor="C,T" StackGrowth="Down" StackPadding="8">
							<!-- Upper Container -->
							<Container Anchor="C,T" Size="parent,auto" AutoSizePadding="0,-20">
								<Stack Offset="0,0" Anchor="C,T" StackGrowth="Down" StackPadding="10">
									<Label ID="RankingsName" Style="ShellHeader" Anchor="C,T" Offset="0,0" String="LOC_SC_RANKINGS" SmallCaps="28" SmallCapsType="EveryWord"/>
									<Label ID="RankingsBlurb" Style="FontNormalMedium16" Anchor="C,T" Offset="0,0" String="LOC_SC_RANKING_TYPE" WrapWidth="parent-30" Align="Center"/>
									<Grid Size="parent+40,80" Offset="0,-10" Texture="Controls_BannerHeaderBlue3" SliceCorner="101,0" SliceSize="65,64" TextureSliceSize="267,64" Anchor="C,T">
										<Label ID="RankingsType" Style="FontFlair22" Anchor="C,T" Offset="0,19" String="LOC_SC_RANKING_TYPE" WrapWidth="parent-20" SmallCapsType="EveryWord" FontStyle="Shadow"/>
									</Grid>
								</Stack>
								<!-- Divider
								<Grid Style="Divider3Grid" Size="parent-9,0" Anchor="C,B" Offset="-2,0"/> -->
							</Container> 

							<ScrollPanel ID="RankingsScroll" Offset="-1,0" Size="parent-10,500" Vertical="1" AutoScrollBar="1" Anchor="C,T">
								<ScrollBar Anchor="R,C" AnchorSide="O,I" Offset="3,0" Style="ScrollVerticalBarHighContrast" Color="46,54,60,255" />
    							<UpButton Anchor="R,T" AnchorSide="O,I" Offset="0,0" Style="ScrollUpButton" />
    							<DownButton Anchor="R,B" AnchorSide="O,I" Offset="0,0" Style="ScrollDownButton" />
								<Stack ID="RankingStack" Anchor="C,T" Offset="0,0" StackPadding="3" />
							</ScrollPanel>
						</Stack>

						<Button ID="CloseButton" Anchor="R,T" Style="CloseButtonSmall" />
					</Grid>
				</Box>
			</Grid>
		</SlideAnim>
	</AlphaAnim>


	<Instance Name="SCRankingsInstance">
